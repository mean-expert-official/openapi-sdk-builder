{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "mapRoot": "src",
    "module": "commonjs",
    "outDir": "dist/src",
    "sourceMap": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "ejs",
      "node",
      "chalk",
      "mkdirp",
      "karma",
      "jasmine",
      "swagger-parser"
    ]
  },
  "exclude": [
    "node_modules",
    "tests"
  ]
}
